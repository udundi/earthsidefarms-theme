<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

</style>

<div class="scroll-content__container section-{{ section.id }}-padding">
  <div class="scroll-content__links-container">
    <div class="scroll-content__links-left">{{ section.settings.title }}</div>
    <div class="scroll-content__links-right">
      {% for block in section.blocks %}
        <a class="scroll-content__link" href="#{{ block.title | handle }}-{{ block.secondary_title | handle }}">{{ block.title | handle }} {{ block.secondary_title | handle }}</a>
      {% endfor %}
    </div>
  </div>
</div>


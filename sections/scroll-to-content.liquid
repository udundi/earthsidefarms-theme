<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #shopify-section-{{ section.id }} {
    margin: 0;
  }

  .scroll-content__links-container {
    background: #F9F4EF;
    width: 100%;
  }

  .scroll-content__links-wrapper {
    width: 100%;
    max-width: 1440px;
    padding: 18px 100px;
    display: flex;
  }

  .scroll-content__links-left {
    width: 40%;
    font-style: normal;
    font-weight: 900;
    font-size: 22px;
    line-height: 120%;
    color: #2F4FA1;
    border-right: 2px solid #2F4FA1;
  }

  .scroll-content__links-right {
    width: 60%;
    display: flex;
    flex-wrap: wrap;
  }

  .scroll-content__links-right .scroll-content__link {
    font-style: normal;
    font-weight: 500;
    font-size: 20px;
    line-height: 120%;
    color: #888;
    text-decoration: none!important;
    text-transform: capitalize;
  }

  .scroll-content__links-right .scroll-content__link:hover,
  .scroll-content__links-right .scroll-content__link.active {
    color: #000000;
  }
</style>

<div class="scroll-content__container section-{{ section.id }}-padding">
  <div class="scroll-content__links-container">
    <div class="scroll-content__links-wrapper">
      <div class="scroll-content__links-left">{{ section.settings.title }}</div>
      <div class="scroll-content__links-right">
        {% for block in section.blocks %}
          <a class="scroll-content__link{% if forloop.index == 1 %} active{% endif %}" href="#{{ block.settings.title | handle }}-{{ block.settings.secondary_title | handle }}">{{ block.settings.title }} {{ block.settings.secondary_title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

